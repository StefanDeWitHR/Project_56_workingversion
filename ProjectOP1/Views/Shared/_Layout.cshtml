<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        $('.datepicker').datepicker();
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BDH Studios™", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
                <div id="imaginary_container">
                    <div class="input-group stylish-input-group">
                        <input type="text" class="form-control" placeholder="Zoeken" style="width: 100%;max-width: 100%; !important">
                        <span class="input-group-addon">
                            <button type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                        <span class="input-group-addon" style="margin-left:5px;">
                               <span>@Html.ActionLink("Registreren", "Register", "Home")</span>
                        </span>
                        <span class="input-group-addon" style="margin-left:5px;">
                              <span>@Html.ActionLink("Login", "Login", "Home")</span>
                        </span>
                        <span class="input-group-addon" style="margin-left:5px;">
                            <span>@Html.ActionLink("Winkelwagen", "shoppingcart", "Home")</span>
                        </span>
                    </div>
                    
                </div>
        </div>
    </div>
        <div class="col-sm-2 col-md-2 col-lg-2 vmenu">
            <nav class="nav-sidebar">
                <ul class="nav">
                    <li class="vertical-menu">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Zonnebrillen", "sunglasses", "Home")</li>
                    <li>@Html.ActionLink("Sterkte brillen", "glasses", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="nav-divider"></li>

                </ul>
            </nav>
        </div>

    <div class="container body-content">
        @RenderBody()
        
    </div>
    <div id="footer">
        <footer>
            <p>&copy; @DateTime.Now.Year - Copyright BDH studios</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
