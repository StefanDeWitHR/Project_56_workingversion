@model Project56.Models.Users


<div class="row">
    <div class="col-md-10 ">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post ))
        {
            <legend>Registeren</legend>
                <div class="form-group">
                        <div class="col-sm-10">
                            @Html.TextBox("email", null, new { @class = "form-control" , placeholder="E-mail" })
                           
                        </div>

                        <div class="col-sm-10">
                            @Html.TextBox("password", null, new {  @class = "form-control", type="password"  , placeholder="Wachtwoord"}) 
                        </div>  
                </div>

                <div class="form-group">
                        <div class="col-sm-4">
                            @Html.TextBox("firstname", null, new {  @class = "form-control"  , placeholder="Voornaam"})
                        </div>
                </div>

                <div class="form-group">
                        <div class="col-sm-4">
                            @Html.TextBox("middlename", null, new {  @class = "form-control"  , placeholder="Tussenvoegsel"})
                        </div>
                </div>
                    
                <div class="form-group">
                        <div class="col-sm-4">
                            @Html.TextBox("lastename", null, new {  @class = "form-control"  , placeholder="Achternaam"})
                        </div>

                    <div class="col-sm-5">
                        @Html.TextBox("dt_birth", null, new {  @class = "form-control" , placeholder="Geboorte datum"  , type="date"})
                    </div>

                    <div class="col-sm-9">
                            @Html.TextBox("MobilNumber", null, new {  @class = "form-control"  , placeholder="Telefoonnummer"})
                        </div>

                    <div class="col-sm-4">
                   
                            @{
                            List<SelectListItem> listItems= new List<SelectListItem>();
                            listItems.Add(new SelectListItem
                                    {
                                    Text = "Joel scholtz",
                                    Value = "Joel scholtz",
                                    Selected = true
                                    });
                            listItems.Add(new SelectListItem
                                    {
                                        Text = "Man",
                                        Value = "Man"
                                    });
                            listItems.Add(new SelectListItem
                                    {
                                        Text = "Vrouw",
                                        Value = "Vrouw"
                                    });
                            }

                                @Html.DropDownListFor(model => model.gender, listItems, "-- Selecteer geslacht --" , new {@class = "form-control"})
                    </div>
                </div>

                <legend>Adresgegevens </legend>

                    <div class="col-sm-10">
                        @Html.TextBox("a_adres", null, new { @class = "form-control" , placeholder="Straat" })
                    </div>

                    <div class="col-sm-6">
                        @Html.TextBox("a_number", null, new { @class = "form-control" , placeholder="Huisnummer" })
                    </div>
                    
                    <div class="col-sm-4">
                        @Html.TextBox("a_zipcode", null, new {  @class = "form-control" ,  placeholder="Postcode" })
                    </div>

                    <div class="col-sm-4">
                        @Html.TextBox("a_city", null, new {  @class = "form-control" , placeholder= "Plaats"})
                    </div>

                    <div class="col-sm-4">
                        @Html.TextBox("country", null, new {  @class = "form-control" , placeholder= "Land"})
                    </div>


                <input type="submit" value="Registeren"/>
                <br /> 
        }

            </fieldset>

