@model Project56.Models.Users

<div class="row">
    <div class="col-md-10 ">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post ))
        {
            <legend>Registeren</legend>
                <div class="form-group">
                        <div class="col-sm-10">
                            @Html.TextBox("email", null, new { id = "email", @class = "form-control" })
                           
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBox("password", null, new { id = "password", @class = "form-control", type="password" }) 
                        </div>  

                <div class="form-group">
                        <div class="col-sm-4">
                            @Html.TextBox("FirstName", null, new { id = "FirstName", @class = "form-control" })
                        </div>
                        <div class="col-sm-2">
                            @Html.TextBox("MiddleName", null, new { id = "MiddleName", @class = "form-control" })
                        </div>
                        <div class="col-sm-5">
                            @Html.TextBox("LastName", null, new { id = "LastName", @class = "form-control" })
                        </div>

                    <div class="col-sm-5">
                        @Html.TextBox("Geboorte Datum", null, new { id = "Geboorte Datum", @class = "form-control" })
                    </div>

                    <div class="col-sm-4">
                        @Html.TextBox("Gender" , null, new { id = "Gender", @class = "form-control" })
                    </div>
                </div>

                <legend>Adresgegevens</legend>

                    <div class="col-sm-10">
                        @Html.TextBox("AddressLine1", null, new { id = "AddressLine1", @class = "form-control" })
                    </div>
                
                    <div class="col-sm-10">
                        @Html.TextBox("AddressLine2", null, new { id = "AddresLine2", @class = "form-control" })
                    </div>

                    <div class="col-sm-4">
                        @Html.TextBox("City", null, new { id = "City", @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBox("PostalCode", null, new { id = "PostalCode", @class = "form-control" })
                    </div>
                </div>


                <input type="submit"/>
                <br /> 
        }
                <button type="submit">Registreren</button>
            </fieldset>

