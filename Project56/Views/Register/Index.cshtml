@model Project56.Models.Users


<div class="row">
    <div class="col-md-10 ">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post ))
        {
            <legend>Registeren</legend>
                <div class="form-group">
                        <div class="col-sm-10">
                            @Html.TextBox("email", null, new { @class = "form-control" , placeholder="Email"  , required="true"})
                           
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBox("password", null, new {  @class = "form-control", type="password"  , placeholder="Wachtwoord" , required="true"}) 
                        </div>  

                <div class="form-group">
                        <div class="col-sm-4">
                            @Html.TextBox("fullname", null, new {  @class = "form-control"  , placeholder="Voornaam" , required="true"})
                        </div>


                    <div class="col-sm-5">
                        @Html.TextBox("dt_birth", null, new {  @class = "form-control" , placeholder="Geboorte datum"  , type="date" , required="true"})
                    </div>

                    <div class="col-sm-4">
                   
                            @{
                            List<SelectListItem> listItems= new List<SelectListItem>();
                            listItems.Add(new SelectListItem
                                    {
                                        Text = "Man",
                                        Value = "Man"
                                    });
                            listItems.Add(new SelectListItem
                                    {
                                        Text = "Vrouw",
                                        Value = "Vrouw"
                                    });
                            }

                                @Html.DropDownListFor(model => model.gender, listItems, "-- Selecteer geslacht --" , new {@class = "form-control" , required="true"})
                    </div>
                </div>

                <legend>Adresgegevens </legend>

                    <div class="col-sm-10">
                        @Html.TextBox("a_adres", null, new { @class = "form-control" , placeholder="Adres" , required="true" })
                    </div>
                    
                    <div class="col-sm-4">
                        @Html.TextBox("a_zipcode", null, new {  @class = "form-control" ,  placeholder="Postcode" , required="true" })
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBox("a_city", null, new {  @class = "form-control" , placeholder= "Stad" , required="true"})
                    </div>
                    <legend>Bezorg gegevens </legend>
                
                    <div class="col-sm-10">
                        @Html.TextBox("d_adres", null, new { @class = "form-control"  , placeholder= "Bezorg adres" , required="true" })
                    </div>
                    
                    <div class="col-sm-4">
                        @Html.TextBox("d_zipcode", null, new {  @class = "form-control"  , placeholder= "Postcode" , required="true" })
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBox("d_city", null, new {  @class = "form-control"  , placeholder="Stad" , required="true" })
                    </div>
                </div>


                <input type="submit" value="Registeren"/>
                <br /> 
        }

            </fieldset>

